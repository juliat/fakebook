<!-- THIS WILL BE THE MAIN NEWSFEED -->

<h1>New post</h1>

<%= render 'form' %>

<h1>My Newsfeed</h1>

<table>
  <tr>
    <th>Timestamp</th>
    <th>Content</th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.timestamp %></td>
    <td><%= post.content %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

